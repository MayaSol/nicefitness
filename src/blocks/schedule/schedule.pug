//- Все примеси в этом файле должны начинаться c имени блока (schedule)

mixin schedule(mods)

  -
   var allMods = '';
   if(typeof(mods) !== 'undefined' && mods) {
     var modsList = mods.split(',');
     for (var i = 0; i < modsList.length; i++) {
       allMods = allMods + ' schedule--' + modsList[i].trim();
     }
   }

  .schedule(class=allMods)&attributes(attributes)
    .schedule__inner
      .schedule__col.schedule__col--workdays
        .schedule__name Будни
        .schedule__hours 7:00 - 24:00
      .schedule__col.schedule__col--weekend
        .schedule__name Выходные
        .schedule__hours 8:00 - 23:00

