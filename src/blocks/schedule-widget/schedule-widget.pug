//- Все примеси в этом файле должны начинаться c имени блока (schedule-widget)

mixin schedule-widget(mods)

  -
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' schedule-widget--' + modsList[i].trim();
      }
    }

  section.schedule-widget(class=allMods)&attributes(attributes)
    .schedule-widget__inner
      .schedule-widget__header
        +logo('/')
          img(src='img/logo-green-black.png', alt='Logo', width='216', height='29')
      .schedule-widget__content
        img(src="img/content/schedule-widget.jpg")

