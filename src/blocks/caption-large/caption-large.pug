//- Все примеси в этом файле должны начинаться c имени блока (caption-large)

mixin caption-large(text, mods)

  -
   var allMods = '';
   if(typeof(mods) !== 'undefined' && mods) {
     var modsList = mods.split(',');
     for (var i = 0; i < modsList.length; i++) {
       allMods = allMods + ' caption-large--' + modsList[i].trim();
     }
   }

  .caption-large(class=allMods)&attributes(attributes)
    .caption-large__inner
      .caption-large__text !{text}

