//- Все примеси в этом файле должны начинаться c имени блока (programm)

mixin expand(mods)

  -
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' expand--' + modsList[i].trim();
      }
    }

  section.expand(class=allMods)&attributes(attributes)
    ul.expand__list
      block


mixin expand-item(mods, props)

  -
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' expand__item--' + modsList[i].trim();
      }
    }

  li.expand__item(class=allMods)&attributes(attributes)
    //- +btn()(class="expand__btn expand__btn--closed")
    +btn()(class="expand__btn expand__btn--closed")
      span !{props.title}
    .expand__content
      block
