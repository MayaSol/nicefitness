mixin social-widget(mods,props)


  -
    if(typeof(props) === 'undefined') {
      var props = {};
    }
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' social-widget--' + modsList[i].trim();
      }
    }

  .social-widget(class=allMods)&attributes(attributes)
    .social-widget__inner
      .ya-share2(data-curtain data-size="l" data-color-scheme="blackwhite" data-services="vkontakte,facebook,telegram,whatsapp")
